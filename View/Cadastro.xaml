<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjetoElemento.Cadastro"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F5A9C4">

    <ScrollView>
            <VerticalStackLayout
                Margin="40"
                Padding="30"
                Spacing="20">
                <Image Source="logo_desejo.jpeg"
                       HeightRequest="160"
                       Aspect="AspectFit" />


                <Entry x:Name="nome" Placeholder="UsuÃ¡rio/e-mail" PlaceholderColor="Black" FontAttributes="Bold"/>

                <Entry x:Name="idade" Placeholder="Senha" PlaceholderColor="Black" FontAttributes="Bold" IsPassword="True"/>

                <Label
                    Text="Esqueci minha senha" TextColor="Black"/>
                
                <Label
                    Text="Cadastrar" TextColor="Black"/>

                <Button
                    Text="Entrar"
                    Clicked="Entrar"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="25"
                    HeightRequest="50"/>

            </VerticalStackLayout>
    </ScrollView>
</ContentPage>