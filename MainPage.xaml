<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjetoElemento.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">

    <ScrollView>
        <StackLayout Margin="40">
            <VerticalStackLayout>
                <Label Text="Nome:" TextColor="Black" />
                <Entry Placeholder="Digite seu nome" TextColor="Black" />

                <Label Text="CPF:" TextColor="Black" />
                <Entry Placeholder="Digite seu Cpf" TextColor="Black" />

                <Label Text="Endereço:" TextColor="Black" />
                <Entry Placeholder="Digite seu endereço" TextColor="Black" />

                <Label Text="Senha:" TextColor="Black" />
                <Entry
                    IsPassword="True"
                    Placeholder="Digite sua senha"
                    TextColor="Black" />
            </VerticalStackLayout>

            <HorizontalStackLayout
                Margin="0,20,0,0"
                HorizontalOptions="End"
                Spacing="10">
                <Button Clicked="Salvar" Text="Salvar" />
                <Button Clicked="Limpar" Text="Limpar" />
            </HorizontalStackLayout>


        </StackLayout>
    </ScrollView>

</ContentPage>
